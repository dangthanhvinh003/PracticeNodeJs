<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Find Order</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="container mt-4">
    <h1 class="text-center mb-4">Find Order</h1>

    <form action="/orders" method="GET" class="mb-4">
      <div class="input-group">
        <input
          type="text"
          id="userId"
          name="userId"
          class="form-control"
          placeholder="Enter User ID"
          required
        />
        <button type="submit" class="btn btn-primary">Find Orders</button>
      </div>
    </form>

    <% if (listOrder && listOrder.length > 0) { %>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>User ID</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% listOrder.forEach(order => { %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.userId %></td>
          <td>$<%= order.total %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p class="text-center text-danger">No orders found.</p>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
