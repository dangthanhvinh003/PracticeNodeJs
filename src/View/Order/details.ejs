<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Detail</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
  <div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Brand</a>
      </div>
    </nav>
    <div class="container mt-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Order Detail</h2>
        <% 
          let statusClass = "";
          switch(order.status) {
            case "Pending": statusClass = "bg-warning"; break;
            case "Success": statusClass = "bg-success"; break;
            case "Cancel": statusClass = "bg-danger"; break;
            case "Payment": statusClass = "bg-info"; break;
            case "Failed": statusClass = "bg-danger"; break;
            default: statusClass = "bg-secondary";
          }
        %>
        <span class="badge <%= statusClass %> fs-6">Status: <%= order.status %></span>
      </div>
      
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% orderDetails.forEach(detail => { %>
            <tr>
              <td>
                <%= detail.productId.name %>
              </td>
              <td>$<%= detail.productId.price %>
              </td>
              <td>
                <%= detail.quantity %>
              </td>
              <td>$<%= detail.quantity * detail.productId.price %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <h3>Total: $<%= total %></h3>
    </div>
  </div>

  <footer class="bg-dark text-white text-center p-3 mt-auto">
    &copy; 2025 Your Brand. All rights reserved.
  </footer>
</body>

</html>