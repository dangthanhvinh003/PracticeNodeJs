<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product | Find Technology Easily</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 80px;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            color: #300A6E;
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-submit {
            background-color: #FF2D2B;
            border: none;
            padding: 10px 30px;
            font-weight: 600;
        }

        .btn-submit:hover {
            background-color: #C10A28;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            padding: 10px 30px;
            font-weight: 600;
        }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="form-container">
            <h2 class="form-title">Edit Product</h2>
            <form action="/Product/updateProduct" method="POST">
                <input type="hidden" name="id" value="<%= product.productId %>">

                <div class="mb-3">
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image URL</label>
                    <input type="text" class="form-control" id="img" name="img" value="<%= product.img %>" required>
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type</label>
                    <input type="text" class="form-control" id="type" name="type" value="<%= product.type %>" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="<%= product.price %>"
                        min="0" step="0.01" required>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity"
                        value="<%= product.quantity %>" min="0" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-submit">Update Product</button>
                    <a href="/" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
          const price = parseFloat(document.querySelector('[name="price"]').value);
          const quantity = parseInt(document.querySelector('[name="quantity"]').value);
          
          if (isNaN(price) || price <= 0) {
            alert('Please enter a valid price');
            e.preventDefault();
          }
          
          if (isNaN(quantity) || quantity < 0) {
            alert('Please enter a valid quantity');
            e.preventDefault();
          }
        });
      </script>
</body>

</html>