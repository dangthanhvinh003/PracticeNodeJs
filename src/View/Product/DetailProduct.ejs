<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Detail</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .quantity-container {
        display: flex;
        align-items: center;
        gap: 5px;
      }

      .quantity-container button {
        width: 32px;
        height: 32px;
        border: none;
        background-color: #007bff;
        color: white;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        transition: 0.2s;
      }

      .quantity-container button:hover {
        background-color: #0056b3;
      }

      .quantity-container input {
        width: 50px;
        text-align: center;
        font-size: 16px;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <div>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Brand</a>
          <div class="ml-auto">
            <a class="btn btn-outline-light" href="/Order/cart">
              <i class="fas fa-shopping-cart"></i> Cart
            </a>
          </div>
        </div>
      </nav>
      <div class="container mt-5">
        <div class="row">
          <div class="col-md-6">
            <img
              src="https://picsum.photos/400/300"
              class="img-fluid rounded shadow"
              alt="Product Image"
            />
          </div>
          <div class="col-md-6">
            <h2><%= productDetail.name %></h2>
            <h4 class="text-primary">$<%= productDetail.price %></h4>
            <p><%= productDetail.description %></p>
            <form action="/Order/addOrder" method="POST">
              <input
                type="hidden"
                name="productId"
                value="<%= productDetail.productId %>"
              />
              <label for="quantity">Quantity:</label>
              <div style="display: flex; align-items: center">
                <div class="quantity-container">
                  <button type="button" onclick="changeQuantity(-1)">âˆ’</button>
                  <input
                    type="number"
                    id="quantity"
                    name="quantity"
                    value="1"
                    min="1"
                  />
                  <button type="button" onclick="changeQuantity(1)">+</button>
                </div>
              </div>
              <button type="submit" class="btn btn-danger">Buy</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <footer class="bg-dark text-white text-center p-3 mt-auto">
      &copy; 2025 Your Brand. All rights reserved.
    </footer>
    <script>
      function changeQuantity(amount) {
        let quantityInput = document.getElementById("quantity");
        let currentValue = parseInt(quantityInput.value);
        let newValue = currentValue + amount;
        if (newValue < 1) newValue = 1;
        quantityInput.value = newValue;
      }
    </script>
  </body>
</html>